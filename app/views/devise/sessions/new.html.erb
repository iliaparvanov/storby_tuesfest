<section class="hero is-dark is-fullheight">
  <div class="hero-body">
    <div class="container">        
        <div class="columns is-centered">
          <div class="column has-text-centered is-half">
            <h2 class="is-size-4">Log in</h2>
          </div>
        </div>
        <div class="columns is-vcentered is-centered">
          <div class="column is-one-third">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field">
                <%= f.label :email, class: 'label has-text-white' %>
                <div class="control has-icons-left">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input is-medium' %>
                  <span class="icon is-medium is-left">
                    <%= fa_icon "envelope" %>
                  </span>
                </div>
              </div>

              <div class="field">
                <%= f.label :password, class: 'label has-text-white' %>
                <div class="control has-icons-left">
                  <%= f.password_field :password, autocomplete: "current-password", class: 'input is-medium' %>
                  <span class="icon is-medium is-left">
                    <%= fa_icon "lock" %>
                  </span>
                </div>
              </div>

              <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, class: 'checkbox' %>
                </div>
              <% end -%>

              <div class="actions">
                <%= f.submit "Go", class: 'button is-dark is-fullwidth' %>
              </div>
            <% end %>
            <br>
            <%= render "devise/shared/links" %>
          </div>
        </div>
    </div>
  </div>
</section>